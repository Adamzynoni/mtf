<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
    <preset name="system">
        <event pattern="#.*#">
            <observer class="Mtf\System\Event\LogObserver" />
            <observer class="Mtf\System\Event\SourceCodeObserver" />
        </event>
        <event pattern="#.*Browser.*#">
            <observer class="Mtf\System\Event\LogObserver" />
        </event>
    </preset>
    <preset name="hard">
        <event pattern="#.*Category.*#">
            <observer class="Mtf\System\Event\LogObserver" />
            <observer class="Mtf\System\Event\SourceCodeObserver" />
        </event>
        <event pattern="#.*#">
            <observer class="Mtf\System\Event\LogObserver" />
            <observer class="Mtf\System\Event\SourceCodeObserver" />
        </event>
    </preset>
</config>
