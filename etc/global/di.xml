<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <preference for="Mtf\Client\DriverInterface" type="Mtf\Client\Driver\Selenium\Driver"/>
    <preference for="Mtf\Client\BrowserInterface" type="Mtf\Client\Browser"/>
    <preference for="Mtf\Client\ElementInterface" type="Mtf\Client\Element\SimpleElement"/>
    <preference for="Mtf\System\Event\EventManagerInterface" type="Mtf\System\Event\EventManager"/>
    <preference for="Mtf\Constraint\AbstractConstraint" type="Mtf\Constraint\Dummy"/>
    <preference for="Mtf\ObjectManagerInterface" type="Mtf\ObjectManager"/>
    <preference for="Mtf\ObjectManager\FactoryInterface" type="Mtf\ObjectManager\Factory"/>
    <preference for="Mtf\Config\ReaderInterface" type="Mtf\Config\Reader\Filesystem"/>
    <preference for="Mtf\ObjectManager\ConfigInterface" type="Mtf\ObjectManager\Config\Config"/>
    <preference for="Mtf\Util\Generate\Fixture\FieldsProviderInterface"
                type="Mtf\Util\Generate\Fixture\DummyFieldsProvider"/>
    <preference for="Mtf\Util\Generate\Repository\CollectionProviderInterface"
                type="Mtf\Util\Generate\Repository\DummyCollectionProvider"/>
    <type name="Mtf\Client\Element\SimpleElement" shared="false"/>
    <type name="Mtf\Block\BlockInterface" shared="false"/>
    <type name="Mtf\Page\PageInterface" shared="false"/>
    <type name="Mtf\Fixture\InjectableFixture" shared="false"/>
    <type name="Mtf\Fixture\FixtureInterface" shared="false"/>
    <type name="Mtf\TestCase\Functional" shared="false"/>
    <type name="Mtf\Util\Iterator\TestCase">
        <arguments>
            <argument name="ruleFactory" xsi:type="object">Mtf\TestRunner\Rule\RuleFactory</argument>
        </arguments>
    </type>
    <preference for="Mtf\Config\FileResolverInterface" type="Mtf\Config\FileResolver\Module"/>
    <preference for="Mtf\Config\ConverterInterface" type="Mtf\Config\Converter"/>
    <preference for="Mtf\Config\SchemaLocatorInterface" type="Mtf\Config\SchemaLocator"/>
    <preference for="Mtf\Config\ValidationStateInterface" type="Mtf\Config\ValidationState"/>
    <type name="Mtf\Config\ValidationState">
        <arguments>
            <argument name="appMode" xsi:type="string">developer</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Filter\TestSuiteNamespace">
        <arguments>
            <argument name="pathConfig" xsi:type="string">rule/testsuite/namespace</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Filter\TestSuiteModule">
        <arguments>
            <argument name="pathConfig" xsi:type="string">rule/testsuite/module</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Filter\TestSuiteType">
        <arguments>
            <argument name="pathConfig" xsi:type="string">rule/testsuite/type</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Filter\TestSuiteClass">
        <arguments>
            <argument name="pathConfig" xsi:type="string">rule/testsuite/class</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Filter\TestCaseTag">
        <arguments>
            <argument name="pathConfig" xsi:type="string">rule/testcase/tag</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Filter\VariationTag">
        <arguments>
            <argument name="pathConfig" xsi:type="string">rule/variation/tag</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Filter\ConstraintTag">
        <arguments>
            <argument name="pathConfig" xsi:type="string">rule/constraint/tag</argument>
        </arguments>
    </type>

    <type name="Mtf\TestRunner\Configuration">
        <arguments>
            <argument name="configuration" xsi:type="object">Mtf\Config\TestRunner</argument>
        </arguments>
    </type>
    <type name="Mtf\TestRunner\Rule\RuleFactory">
        <arguments>
            <argument name="configuration" xsi:type="object">Mtf\Config\TestRunnerRule</argument>
        </arguments>
    </type>
    <type name="Mtf\System\Event\EventManager">
        <arguments>
            <argument name="configuration" xsi:type="object">Mtf\Config\SystemEvent</argument>
        </arguments>
    </type>
    <type name="Mtf\Fixture\FixtureFactory">
        <arguments>
            <argument name="configData" xsi:type="object">Mtf\Config\Fixture</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Generate\Fixture">
        <arguments>
            <argument name="configData" xsi:type="object">Mtf\Config\Fixture</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Generate\Handler">
        <arguments>
            <argument name="configData" xsi:type="object">Mtf\Config\Fixture</argument>
        </arguments>
    </type>
    <type name="Mtf\Util\Generate\Repository">
        <arguments>
            <argument name="configData" xsi:type="object">Mtf\Config\Fixture</argument>
        </arguments>
    </type>

    <virtualType name="Mtf\Config\TestRunner" type="Mtf\Config\Data">
        <arguments>
            <argument name="reader" xsi:type="object">Mtf\Config\Reader\TestRunner</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\TestRunnerRule" type="Mtf\Config\Data">
        <arguments>
            <argument name="reader" xsi:type="object">Mtf\Config\Reader\TestRunnerRule</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\SystemEvent" type="Mtf\System\Event\Config\Data">
        <arguments>
            <argument name="reader" xsi:type="object">Mtf\Config\Reader\SystemEvent</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\Fixture" type="Mtf\Config\Data">
        <arguments>
            <argument name="reader" xsi:type="object">Mtf\Config\Reader\Fixture</argument>
        </arguments>
    </virtualType>

    <virtualType name="Mtf\Config\SchemaLocator\TestRunner" type="Mtf\Config\SchemaLocator">
        <arguments>
            <argument name="schemaPath" xsi:type="string">Mtf/TestRunner/etc/testRunner.xsd</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\SchemaLocator\TestRunnerRule" type="Mtf\Config\SchemaLocator">
        <arguments>
            <argument name="schemaPath" xsi:type="string">Mtf/TestRunner/Rule/etc/rule.xsd</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\SchemaLocator\SystemEvent" type="Mtf\Config\SchemaLocator">
        <arguments>
            <argument name="schemaPath" xsi:type="string">etc/global/events.xsd</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\SchemaLocator\Fixture" type="Mtf\Config\SchemaLocator">
        <arguments>
            <argument name="schemaPath" xsi:type="string">Mtf/Fixture/etc/fixture.xsd</argument>
        </arguments>
    </virtualType>

    <virtualType name="Mtf\Config\Reader\TestRunnerRule" type="Mtf\Config\Reader\Filesystem">
        <arguments>
            <argument name="fileResolver" xsi:type="object">Mtf\Config\FileResolver\Primary</argument>
            <argument name="converter" xsi:type="object">Mtf\TestRunner\Rule\Configuration\Converter</argument>
            <argument name="schemaLocator" xsi:type="object">Mtf\Config\SchemaLocator\TestRunnerRule</argument>
            <argument name="idAttributes" xsi:type="array">
                <item name="/config/rule" xsi:type="string">scope</item>
                <item name="/config/rule/filter" xsi:type="string">namespace</item>
            </argument>
            <argument name="fileName" xsi:type="string">rule.xml</argument>
            <argument name="defaultScope" xsi:type="string">Mtf/TestRunner/Rule/etc</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\Reader\TestRunner" type="Mtf\Config\Reader\Filesystem">
        <arguments>
            <argument name="fileResolver" xsi:type="object">Mtf\Config\FileResolver\Primary</argument>
            <argument name="converter" xsi:type="object">Mtf\TestRunner\Configuration\Converter</argument>
            <argument name="schemaLocator" xsi:type="object">Mtf\Config\SchemaLocator\TestRunner</argument>
            <argument name="idAttributes" xsi:type="array">
                <item name="/config/rule" xsi:type="string">scope</item>
                <item name="/config/rule/allow/namespace" xsi:type="string">value</item>
                <item name="/config/rule/allow/type" xsi:type="string">value</item>
                <item name="/config/rule/allow/module" xsi:type="string">value</item>
                <item name="/config/rule/deny/namespace" xsi:type="string">value</item>
                <item name="/config/rule/deny/type" xsi:type="string">value</item>
                <item name="/config/rule/deny/module" xsi:type="string">value</item>
                <item name="/config/rule/allow/tag" xsi:type="string">value</item>
                <item name="/config/rule/deny/tag" xsi:type="string">value</item>
            </argument>
            <argument name="fileName" xsi:type="string"/>
            <argument name="defaultScope" xsi:type="string">testsuites/Magento/Mtf/TestSuite/MtfTests</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\Reader\SystemEvent" type="Mtf\Config\Reader\Filesystem">
        <arguments>
            <argument name="fileResolver" xsi:type="object">Mtf\Config\FileResolver\Primary</argument>
            <argument name="converter" xsi:type="object">Mtf\System\Event\Config\Converter</argument>
            <argument name="schemaLocator" xsi:type="object">Mtf\Config\SchemaLocator\SystemEvent</argument>
            <argument name="idAttributes" xsi:type="array">
                <item name="/config/preset/observer/tag" xsi:type="string">name</item>
                <item name="/config/preset/observer" xsi:type="string">class</item>
                <item name="/config/preset" xsi:type="string">name</item>
            </argument>
            <argument name="fileName" xsi:type="string">events.xml</argument>
            <argument name="defaultScope" xsi:type="string">etc/global</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\Reader\Fixture" type="Mtf\Config\Reader\Filesystem">
        <arguments>
            <argument name="fileResolver" xsi:type="object">Mtf\Config\FileResolver\Module</argument>
            <argument name="converter" xsi:type="object">Mtf\Config\Converter</argument>
            <argument name="schemaLocator" xsi:type="object">Mtf\Config\SchemaLocator\Fixture</argument>
            <argument name="fileName" xsi:type="string">fixture.xml</argument>
            <argument name="defaultScope" xsi:type="string">etc</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\SchemaLocator\Config" type="Mtf\Config\SchemaLocator">
        <arguments>
            <argument name="schemaPath" xsi:type="string">config/config.xsd</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\Reader\Config" type="Mtf\Config\Reader\Filesystem">
        <arguments>
            <argument name="fileResolver" xsi:type="object">Mtf\Config\FileResolver\Primary</argument>
            <argument name="converter" xsi:type="object">Mtf\Config\ConverterGlobal</argument>
            <argument name="schemaLocator" xsi:type="object">Mtf\Config\SchemaLocator\Config</argument>
            <argument name="idAttributes" xsi:type="array">
                <item name="/config" xsi:type="string">scope</item>
            </argument>
            <argument name="fileName" xsi:type="string">config.xml</argument>
            <argument name="defaultScope" xsi:type="string">config</argument>
        </arguments>
    </virtualType>
    <virtualType name="Mtf\Config\GlobalConfig" type="Mtf\Config\Data">
        <arguments>
            <argument name="reader" xsi:type="object">Mtf\Config\Reader\Config</argument>
        </arguments>
    </virtualType>
    <type name="Mtf\Client\Driver\Selenium\Driver">
        <arguments>
            <argument name="configuration" xsi:type="object">Mtf\Config\GlobalConfig</argument>
        </arguments>
    </type>
    <type name="Mtf\Client\Browser">
        <arguments>
            <argument name="configuration" xsi:type="object">Mtf\Config\GlobalConfig</argument>
        </arguments>
    </type>
    <type name="Mtf\Client\Driver\Selenium\RemoteDriver">
        <arguments>
            <argument name="config" xsi:type="object">Mtf\Config\GlobalConfig</argument>
        </arguments>
    </type>
    <type name="Mtf\Client\Driver\Selenium\TestCase">
        <arguments>
            <argument name="config" xsi:type="object">Mtf\Config\GlobalConfig</argument>
        </arguments>
    </type>
</config>
